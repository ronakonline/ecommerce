       <!-- breadcrumb start -->
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="page-title">
                        <h2>Manage Account</h2>
                    </div>
                </div>
                <div class="col-sm-6">
                    <nav aria-label="breadcrumb" class="theme-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active">Account</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb End -->
    <!-- address section start -->
    <section class="contact-page register-page section-b-space">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h3>SHIPPING ADDRESS</h3>
                    <form class="theme-form" method="post" action="/user/updateaddress/{{address.id}}">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="name">flat / plot</label>
                                <input type="text" class="form-control" id="home-ploat" placeholder="flat/plot"
                                    required="" name="flat" value="{{address.flat}}">
                            </div>
                            <div class="col-md-6">
                                <label for="name">Address *</label>
                                <input type="text" class="form-control" id="address-two" placeholder="Address"
                                    required="" name="add1" value="{{address.add1}}">
                            </div>
                             <div class="col-md-6">
                                <label for="name">Landmark *</label>
                                <input type="text" class="form-control" id="address-two" placeholder="Address"
                                    required="" name="landmark" value="{{address.landmark}}">
                            </div>
                            <div class="col-md-6">
                                <label for="email">Zip Code *</label>
                                <input type="text" class="form-control" id="zip-code" placeholder="zip-code"
                                    required="" name="zipcode" value="{{address.zip}}">
                            </div>
                          
                            <div class="col-md-6">
                                <label for="review">City *</label>
                                <input type="text" class="form-control" id="city" placeholder="City" required="" name="city" value="{{address.city}}">
                            </div>
                            <div class="col-md-6">
                                <label for="review">Region/State *</label>
                                <input type="text" class="form-control" id="region-state" placeholder="Region/state"
                                    required="" name="state" value="{{address.state}}">
                            </div>
                             <input type="hidden" name="_csrf" value="{{csrfToken}}">
                            <div class="col-md-12">
                                <button class="btn btn-sm btn-solid" type="submit">Update Address</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- Section ends -->

